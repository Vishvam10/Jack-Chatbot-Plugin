{
    "name": "Jack",
    "manifest_version": 3,
    "version": "0.0.1",
    "description": "Chatbot plugin using OpenAI's Chat API",
    "host_permissions": ["*://*/*", "<all_urls>"],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_title": "Click to show an alert"
    },
    "background": {
      "service_worker": "./background/background.js"
    },
    "icons": {
      "128": "./assets/icons/jack.png"
    }
}