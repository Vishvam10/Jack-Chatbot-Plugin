{
    "name": "Jack",
    "manifest_version": 3,
    "version": "0.0.1",
    "description": "Chatbot plugin using ChatGPT",
    "action": {
      "default_popup": "./popup/popup.html"
    },
    "host_permissions": ["*://*/*", "<all_urls>"],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts" : [
      {
        "matches" : ["*://*/*", "<all_urls>"],
        "js" : [
          "./foreground/contentScript.js"
        ],
        "css" : ["./foreground/contentScript.css"]
      }
    ]
}